<h3>Welcome, <%= @user.name %>!</h3>

<h4><%= @user.email %></h4><br><br>

<ol>
  <% @user.conferences.each do |conference| %>
  <li>
    <a href="/conferences/<%= conference.id %>">
      <p><%= conference.name %></p>
      </a>
      <p>Date: <%= conference.date = ("%A %B %e %Y") %> </p>
      <p>Added by: <%= conference.user.name %> </p>
  </li>
  <% end %>
</ol>
