  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Conferences</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <header>
      <div>
      <h5>  Developer tools </h5>
      <p>Session hash: <%= session.inspect %></p>
      <p>Params hash: <%= params.inspect %></p>
      <p>current_user: <%= current_user ? current_user.name : "Not logged in" %></p>
    </div>
    </header>

    <nav>
      <% if logged_in? %>
      <a href="/logout">Logout</a>
      <a href="/conferences">Conferences</a>
      <a href="/conferences/new">Add a New Conference</a>
      <a href="/users/<%= current_user.id %>">My Conferences</a>
      <% end %>
    </nav>

    <div class="wrapper">
      <% if flash[:message] %>
        <h4> <%= flash[:message] %> </h4><br><br>
      <% end %>

      <% if flash[:errors] %>
        <h4> <%= flash[:errors] %> </h4><br><br>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2018 <strong>Conferences</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
